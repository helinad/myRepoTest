<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/top_dark_gray"
        android:orientation="horizontal"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/ctIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.75"
            android:src="@drawable/ct_icon" />

        <RelativeLayout
            android:id="@+id/rlPatient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/selector"
            android:orientation="vertical" >

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/tvPatient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/imgPatient"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_patientname" />

            <ImageView
                android:id="@+id/imgPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:rotation="90"
                android:src="@drawable/down_arrow" />
        </RelativeLayout>

        <com.constant_therapy.widget.CTTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.25"
            android:gravity="center"
            android:text="@string/dashboare_title"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_title" />

        <LinearLayout
            android:id="@+id/llNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.6"
                android:src="@drawable/note_dark60" />

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/notes"
                android:textColor="@android:color/black"
                android:textSize="@dimen/loginas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:src="@drawable/no_mail_dark60" />

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/message"
                android:textColor="@android:color/black"
                android:textSize="@dimen/loginas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/imgSetting"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:src="@drawable/settings_dark" />

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@android:color/black"
                android:textSize="@dimen/loginas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:src="@drawable/help" />

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/help"
                android:textColor="@android:color/black"
                android:textSize="@dimen/loginas" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>