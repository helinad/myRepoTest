<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="3dp"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light_gray"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/top_dark_gray"
            android:orientation="horizontal"
            android:weightSum="10" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.75"
                android:src="@drawable/ct_icon" />

            <RelativeLayout
                android:id="@+id/rlPatient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:background="@drawable/selector"
                android:orientation="vertical" >

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/tvPatient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_patientname" />
            </RelativeLayout>

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.25"
                android:gravity="center"
                android:text="@string/dashboare_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_title" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/note_dark60" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/notes"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/loginas" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/no_mail_dark60" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/message"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/loginas" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/settings_dark" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/setting"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/loginas" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/help" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/help"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/loginas" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/bg_light_gray" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageIcon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:src="@drawable/left_navigation_arrow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tvClear"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.6"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:text="@string/clear"
                        android:textColor="@color/white" >

                        <Button
                            android:id="@+id/btnTask"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/blue_buton"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1.5"
                            android:text="@string/task_count"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/txt_month" />

                        <Button
                            android:id="@+id/btnDuration"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/black"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1.5"
                            android:text="@string/duration"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/txt_month" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.15"
                    android:background="@color/bg_light_gray"
                    android:orientation="horizontal"
                    android:weightSum="5" >

                    <LinearLayout
                        android:id="@+id/llLeftArrow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@color/top_dark_gray"
                        android:padding="8dp" >

                        <Button
                            android:id="@+id/btnLeftArrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/arrowright"
                            android:rotation="180" />
                    </LinearLayout>

                    <com.constant_therapy.widget.CTTextView
                        android:id="@+id/tvDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/selector"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/today"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_month" />

                    <LinearLayout
                        android:id="@+id/llRightarrow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@color/top_dark_gray"
                        android:padding="8dp" >

                        <Button
                            android:id="@+id/btnRightarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/arrowright" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.25"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/tvSeemore"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.25"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/tvSeemore"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:weightSum="10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <com.constant_therapy.widget.CTTextView
                            android:id="@+id/tvMonth6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/bg_light_gray"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/txt_month"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="@color/bg_light_gray"
                            android:gravity="center"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:background="@color/bg_light_gray"
                        android:orientation="vertical" >

                        <GridView
                            android:id="@+id/calendar6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:horizontalSpacing="2dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="7"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>