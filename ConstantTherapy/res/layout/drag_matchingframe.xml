<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/top_dark_gray"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <com.constant_therapy.widget.CTTextView
                android:id="@+id/tvTaskQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Please pick from below"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_question" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8" >

            <FrameLayout
                android:id="@+id/frSecond"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="190dp" >

                <ImageView
                    android:id="@+id/imgSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sandal"
                    android:src="@drawable/sound_icon" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/tvDragSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_sandal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_wordfragment" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/frSecond"
                android:layout_marginRight="320dp"
                android:layout_toLeftOf="@+id/frSecond" >

                <ImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sandal"
                    android:src="@drawable/sound_icon" />

                <com.constant_therapy.widget.CTTextView
                    android:id="@+id/tvDragFirst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_sandal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_wordfragment" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>